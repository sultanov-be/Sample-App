<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/student_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/name_and_surname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/department"
        android:textSize="18sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/name_and_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_stud"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/student_text"
        app:layout_constraintEnd_toStartOf="@id/department"
        android:textSize="18sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/department"
        android:padding="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textColor="@color/text"/>

</androidx.constraintlayout.widget.ConstraintLayout>